<!-- defender_easm_policies.xml -->
<!-- Microsoft Defender EASM for Splunk App -->
<!-- Policy Engine visibility: counts, impact, assets, and trends -->

<dashboard version="1.1">
  <label>Policies</label>

  <description>
    Visibility into Microsoft Defender EASM Policy Engine execution, including
    exposure insight generation, affected assets, and execution trends.
  </description>

  <!-- ===================== -->
  <!-- BASE SEARCH -->
  <!-- ===================== -->

  <search id="base_policy_eval">
    <query>
      `easm_index`
      sourcetype=defender:easm:policy_evaluation
    </query>
    <earliest>-30d@d</earliest>
    <latest>now</latest>
  </search>

  <!-- ===================== -->
  <!-- POLICY COUNTS SUMMARY -->
  <!-- ===================== -->

  <row>
    <panel>
      <title>Policy Hit Counts</title>
      <table>
        <search base="base_policy_eval">
          <query>
            | stats count AS policy_hits BY policyId policyName severity
            | sort - policy_hits
          </query>
        </search>

        <drilldown>
          <link>
            <![CDATA[
              /app/microsoft_defender_easm/defender_easm_policy_detail?policy_id=$row.policyId$
            ]]>
          </link>
        </drilldown>

        <option name="count">15</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- ===================== -->
  <!-- EXPOSURE INSIGHTS -->
  <!-- ===================== -->

  <row>
    <panel>
      <title>Exposure Insights by Policy</title>
      <table>
        <search base="base_policy_eval">
          <query>
            | stats count AS insight_count BY policyId policyName exposureInsight severity
            | sort - insight_count
          </query>
        </search>

        <drilldown>
          <link>
            <![CDATA[
              /app/microsoft_defender_easm/defender_easm_exposure_insights?policy_id=$row.policyId$
            ]]>
          </link>
        </drilldown>

        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- ===================== -->
  <!-- AFFECTED ASSETS -->
  <!-- ===================== -->

  <row>
    <panel>
      <title>Affected Assets by Policy</title>
      <table>
        <search base="base_policy_eval">
          <query>
            | stats count AS affected_assets BY policyId policyName assetType
            | sort - affected_assets
          </query>
        </search>

        <drilldown>
          <link>
            <![CDATA[
              /app/microsoft_defender_easm/defender_easm_assets?policy_id=$row.policyId$&asset_type=$row.assetType$
            ]]>
          </link>
        </drilldown>

        <option name="count">15</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- ===================== -->
  <!-- POLICY TREND -->
  <!-- ===================== -->

  <row>
    <panel>
      <title>Policy Hit Trend (30 Days)</title>
      <chart>
        <search base="base_policy_eval">
          <query>
            | timechart span=1d count BY policyName
          </query>
        </search>

        <option name="charting.chart">line</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.axisTitleX.text">Date</option>
        <option name="charting.axisTitleY.text">Policy Hits</option>
      </chart>
    </panel>
  </row>

</dashboard>
