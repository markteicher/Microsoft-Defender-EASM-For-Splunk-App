<!-- defender_easm_billable_assets.xml -->
<!-- Microsoft Defender EASM for Splunk App -->
<!-- Manage â†’ Billable Assets -->

<dashboard version="1.1">
  <label>Billable Assets</label>
  <description>
    Visibility into billable assets reported by Microsoft Defender External Attack Surface Management.
    Counts and trends are derived directly from billable asset records.
  </description>

  <!-- ========================= -->
  <!-- TIME PICKER -->
  <!-- ========================= -->
  <fieldset submitButton="false">
    <input type="time" token="time">
      <label>Time Range</label>
      <default>
        <earliest>-30d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>

  <!-- ========================= -->
  <!-- KPI SUMMARY -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Total Billable Assets</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:billable_asset
            | stats count
          </query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
      </single>
    </panel>

    <panel>
      <title>Hosts</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:billable_asset
            billable_type=host
            | stats count
          </query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
      </single>
    </panel>

    <panel>
      <title>Domains</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:billable_asset
            billable_type=domain
            | stats count
          </query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
      </single>
    </panel>

    <panel>
      <title>IP Addresses</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:billable_asset
            billable_type=ip
            | stats count
          </query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
      </single>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- BILLABLE ASSET TREND -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Billable Assets Over Time</title>
      <chart>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:billable_asset
            | timechart span=1d count by billable_type
          </query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.stackMode">stacked</option>
        <option name="charting.legend.placement">bottom</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- BILLABLE ASSET DETAILS -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Billable Asset Details</title>
      <table>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:billable_asset
            | table
                _time
                billable_type
                asset_type
                easm_id
            | sort - _time
          </query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="count">20</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

</dashboard>
