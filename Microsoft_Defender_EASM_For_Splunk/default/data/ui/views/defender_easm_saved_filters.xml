<!-- defender_easm_saved_filters.xml -->
<!-- Microsoft Defender EASM for Splunk App -->
<!-- Dashboard: Saved Filters -->

<dashboard version="1.1">
  <label>Saved Filters</label>

  <description>
    Displays saved filters configured in Microsoft Defender EASM.
    Provides visibility into reusable query logic across discovery,
    reports, and investigations.
  </description>

  <!-- Time Picker -->
  <row>
    <panel>
      <input type="time" token="time_range">
        <label>Time Range</label>
        <default>
          <earliest>-90d@d</earliest>
          <latest>now</latest>
        </default>
      </input>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- BASE SEARCH -->
  <!-- ========================= -->
  <search id="saved_filters_base">
    <query>
      `easm_index`
      sourcetype=defender:easm:saved_filter
    </query>
    <earliest>$time_range.earliest$</earliest>
    <latest>$time_range.latest$</latest>
  </search>

  <!-- ========================= -->
  <!-- SAVED FILTERS TABLE -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Saved Filters</title>

      <table>
        <search base="saved_filters_base">
          <query>
            | stats
                latest(displayName)            AS display_name
                latest(description)            AS description
                latest(filterType)             AS filter_type
                latest(createdBy)              AS created_by
                latest(createdDateTime)        AS created_date
                latest(lastModifiedDateTime)   AS last_modified_date
              BY filterId
            | rename filterId AS filter_id
            | sort display_name
          </query>
        </search>

        <option name="count">15</option>
        <option name="wrap">true</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- FILTER TYPE SUMMARY -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Saved Filter Summary by Type</title>

      <chart>
        <search base="saved_filters_base">
          <query>
            | stats count BY filterType
            | sort -count
          </query>
        </search>

        <option name="charting.chart">bar</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

</dashboard>
