<!-- defender_easm_report_execution_duration.xml -->
<!-- Microsoft Defender EASM for Splunk App -->
<!-- Dashboard: Report Execution Duration -->

<dashboard version="1.1">
  <label>Report Execution Duration</label>
  <description>
    Execution timing and duration analysis for Microsoft Defender EASM reports.
    Highlights long-running and failed reports for operational insight.
  </description>

  <!-- Time Range Picker -->
  <row>
    <panel>
      <input type="time" token="time_range">
        <label>Time Range</label>
        <default>
          <earliest>-30d</earliest>
          <latest>now</latest>
        </default>
      </input>
    </panel>
  </row>

  <!-- Execution Duration Table -->
  <row>
    <panel>
      <title>Report Execution Durations</title>
      <table>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:report
            | eval duration_seconds=completed_time-created_time
            | eval duration_minutes=round(duration_seconds/60,2)
            | table
                report_id
                report_name
                report_type
                status
                created_time
                completed_time
                duration_minutes
            | sort -duration_minutes
          </query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- Long Running Reports -->
  <row>
    <panel>
      <title>Long Running Reports (Top 10)</title>
      <chart>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:report
            | eval duration_seconds=completed_time-created_time
            | eval duration_minutes=round(duration_seconds/60,2)
            | stats max(duration_minutes) as max_duration by report_name
            | sort -max_duration
            | head 10
          </query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.axisTitleX.text">Report</option>
        <option name="charting.axisTitleY.text">Duration (Minutes)</option>
        <option name="charting.legend.placement">none</option>
      </chart>
    </panel>
  </row>

  <!-- Failed vs Successful Execution -->
  <row>
    <panel>
      <title>Execution Status Breakdown</title>
      <chart>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:report
            | stats count by status
          </query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

</dashboard>
