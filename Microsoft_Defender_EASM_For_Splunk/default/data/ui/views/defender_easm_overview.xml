<!-- defender_easm_overview.xml -->
<!-- Microsoft Defender EASM for Splunk App -->
<!-- Overview Dashboard -->

<dashboard version="1.1">
  <label>Overview</label>
  <description>
    High-level inventory and attack surface insights derived from Microsoft Defender External Attack Surface Management.
  </description>

  <!-- ===================================================== -->
  <!-- ASSET INVENTORY SUMMARY -->
  <!-- ===================================================== -->

  <row>
    <panel>
      <title>Domains</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_domains`
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Hosts</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_hosts`
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Pages</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_pages`
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>SSL Certificates</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_ssl_certificates`
            | stats count
          </query>
        </search>
      </single>
    </panel>
  </row>

  <row>
    <panel>
      <title>ASNs</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_asns`
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>IP Blocks</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_ip_blocks`
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>IP Addresses</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_ip_addresses`
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>WHOIS Contacts</title>
      <single>
        <search>
          <query>
            `easm_index` `easm_whois_contacts`
            | stats count
          </query>
        </search>
      </single>
    </panel>
  </row>

  <!-- ===================================================== -->
  <!-- ATTACK SURFACE INSIGHTS -->
  <!-- ===================================================== -->

  <row>
    <panel>
      <title>High Priority Findings</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:exposure_insight
            severity=High
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Medium Priority Findings</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:exposure_insight
            severity=Medium
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Low Priority Findings</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:exposure_insight
            severity=Low
            | stats count
          </query>
        </search>
      </single>
    </panel>
  </row>

</dashboard>
