<!-- defender_easm_inventory_changes.xml -->
<!-- Microsoft Defender EASM for Splunk App -->
<!-- General â†’ Inventory Changes (Derived) -->

<dashboard version="1.1">
  <label>Inventory Changes</label>

  <description>
    Derived view of asset additions over time based on first-seen timestamps
    from Microsoft Defender External Attack Surface Management.
  </description>

  <!-- ========================= -->
  <!-- BASE SEARCH -->
  <!-- ========================= -->
  <search id="base_inventory">
    <query>
      `easm_index`
      `easm_assets_sourcetypes`
      | eval first_seen=coalesce(
          firstSeenDateTime,
          createdDate,
          discoveredDate
        )
      | where isnotnull(first_seen)
    </query>
    <earliest>-90d@d</earliest>
    <latest>now</latest>
  </search>

  <!-- ========================= -->
  <!-- KPI ROW -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>Total Assets Observed</title>
      <single>
        <search base="base_inventory">
          <query>
            | stats dc(easm_id)
          </query>
        </search>
        <option name="unit">assets</option>
      </single>
    </panel>

    <panel>
      <title>New Assets (30d)</title>
      <single>
        <search base="base_inventory">
          <query>
            | where first_seen &gt; relative_time(now(), "-30d")
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>New Assets (7d)</title>
      <single>
        <search base="base_inventory">
          <query>
            | where first_seen &gt; relative_time(now(), "-7d")
            | stats count
          </query>
        </search>
      </single>
    </panel>

  </row>

  <!-- ========================= -->
  <!-- DISTRIBUTION -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>New Assets by Type (30d)</title>
      <chart>
        <search base="base_inventory">
          <query>
            | where first_seen &gt; relative_time(now(), "-30d")
            | stats count by sourcetype
            | sort - count
          </query>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.legend.placement">none</option>
      </chart>
    </panel>

  </row>

  <!-- ========================= -->
  <!-- TIME SERIES -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>Asset Additions Over Time</title>
      <chart>
        <search base="base_inventory">
          <query>
            | timechart span=1d count
          </query>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.legend.placement">none</option>
      </chart>
    </panel>

  </row>

  <!-- ========================= -->
  <!-- DETAIL TABLE -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>New Asset Details</title>
      <table>
        <search base="base_inventory">
          <query>
            | eval first_seen_date=strftime(first_seen,"%Y-%m-%d")
            | table
                first_seen_date
                sourcetype
                easm_id
                domain
                host
                ip_address
            | sort - first_seen_date
          </query>
        </search>
        <option name="count">25</option>
        <option name="wrap">true</option>
        <option name="rowNumbers">true</option>
      </table>
    </panel>
  </row>

</dashboard>
