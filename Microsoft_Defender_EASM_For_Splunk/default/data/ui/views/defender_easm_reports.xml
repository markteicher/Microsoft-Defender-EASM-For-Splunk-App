<!-- defender_easm_reports.xml -->
<!-- Microsoft Defender EASM for Splunk App -->
<!-- Dashboard: Reports -->

<dashboard version="1.1">
  <label>Reports</label>

  <description>
    Inventory and operational visibility of Microsoft Defender EASM reports
    collected from the data-plane Reports API.
  </description>

  <!-- ========================= -->
  <!-- TIME RANGE -->
  <!-- ========================= -->

  <fieldset submitButton="false">
    <input type="time" token="time">
      <label>Time Range</label>
      <default>
        <earliest>-90d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>

  <!-- ========================= -->
  <!-- BASE SEARCH -->
  <!-- ========================= -->

  <search id="reports_base">
    <query>
      `easm_index`
      sourcetype=defender:easm:report
    </query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>

  <!-- ========================= -->
  <!-- KPI SUMMARY -->
  <!-- ========================= -->

  <row>
    <panel>
      <title>Total Reports</title>
      <single>
        <search base="reports_base">
          <query>
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Successful Reports</title>
      <single>
        <search base="reports_base">
          <query>
            | search status=completed
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Failed Reports</title>
      <single>
        <search base="reports_base">
          <query>
            | search status IN ("failed","error")
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Distinct Report Types</title>
      <single>
        <search base="reports_base">
          <query>
            | stats dc(report_type)
          </query>
        </search>
      </single>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- REPORT INVENTORY -->
  <!-- ========================= -->

  <row>
    <panel>
      <title>Report Inventory</title>
      <table>
        <search base="reports_base">
          <query>
            | table
                report_id
                report_name
                report_type
                status
                created_time
                completed_time
                created_by
            | sort - created_time
          </query>
        </search>

        <drilldown>
          <link>
            <![CDATA[
              /app/microsoft_defender_easm/defender_easm_report_details?report_id=$row.report_id$
            ]]>
          </link>
        </drilldown>

        <option name="count">20</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- REPORT TYPE DISTRIBUTION -->
  <!-- ========================= -->

  <row>
    <panel>
      <title>Reports by Type</title>
      <chart>
        <search base="reports_base">
          <query>
            | stats count by report_type
            | sort - count
          </query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- STATUS DISTRIBUTION -->
  <!-- ========================= -->

  <row>
    <panel>
      <title>Report Status Distribution</title>
      <chart>
        <search base="reports_base">
          <query>
            | stats count by status
            | sort - count
          </query>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.axisTitleX.text">Status</option>
        <option name="charting.axisTitleY.text">Report Count</option>
        <option name="charting.legend.placement">none</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- RECENT ACTIVITY -->
  <!-- ========================= -->

  <row>
    <panel>
      <title>Recent Report Activity</title>
      <table>
        <search base="reports_base">
          <query>
            | sort - created_time
            | table
                created_time
                report_name
                report_type
                status
                created_by
          </query>
        </search>
        <option name="count">15</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

</dashboard>
