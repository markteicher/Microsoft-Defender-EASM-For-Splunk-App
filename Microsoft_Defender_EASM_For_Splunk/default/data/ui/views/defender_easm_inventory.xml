<!--
  File: defender_easm_inventory.xml
  Microsoft Defender EASM for Splunk App
  General → Inventory
-->

<dashboard version="1.1">
  <label>Inventory</label>

  <description>
    Unified inventory of assets discovered by Microsoft Defender External Attack Surface Management.
    Assets are grouped by native EASM asset types.
  </description>

  <!-- ========================= -->
  <!-- INVENTORY SUMMARY KPIs -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>Total Assets</title>
      <single>
        <search>
          <query>
            `easm_index`
            `easm_assets_sourcetypes`
            | stats count
          </query>
        </search>
        <option name="unit">assets</option>
      </single>
    </panel>

    <panel>
      <title>Asset Types</title>
      <single>
        <search>
          <query>
            `easm_index`
            `easm_assets_sourcetypes`
            | stats dc(sourcetype)
          </query>
        </search>
        <option name="unit">types</option>
      </single>
    </panel>

    <panel>
      <title>New Assets (30d)</title>
      <single>
        <search>
          <query>
            `easm_index`
            `easm_assets_sourcetypes`
            | where _time &gt; relative_time(now(), "-30d")
            | stats count
          </query>
        </search>
      </single>
    </panel>

  </row>

  <!-- ========================= -->
  <!-- ASSET TYPE DISTRIBUTION -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Assets by Type</title>
      <chart>
        <search>
          <query>
            `easm_index`
            `easm_assets_sourcetypes`
            | stats count by sourcetype
            | sort - count
          </query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- DNS RECORDS -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>DNS Records</title>
      <single>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:dns_record
            | stats count
          </query>
        </search>
        <option name="unit">records</option>
      </single>
    </panel>

    <panel>
      <title>DNS Record Inventory</title>
      <table>
        <search>
          <query>
            `easm_index`
            sourcetype=defender:easm:dns_record
            | table
                _time
                dns_name
                dns_record_type
                dns_record_value
                dns_ttl
                easm_id
            | sort - _time
          </query>
        </search>

        <option name="count">15</option>
        <option name="wrap">true</option>

        <!-- Row click: DNS → Asset Detail -->
        <drilldown>
          <link>
            <target>defender_easm_asset_detail</target>
            <arg name="form.easm_id">$row.easm_id$</arg>
          </link>
        </drilldown>

        <!-- Right-click: DNS → Parent Domain -->
        <drilldown type="row">
          <condition>
            <action>
              <link>
                <target>defender_easm_inventory</target>
                <arg name="form.domain">$row.dns_name$</arg>
              </link>
            </action>
          </condition>
        </drilldown>

      </table>
    </panel>

  </row>

  <!-- ========================= -->
  <!-- ASSET INVENTORY (ALL TYPES) -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Asset Inventory (All Types)</title>
      <table>
        <search>
          <query>
            `easm_index`
            `easm_assets_sourcetypes`
            | eval asset_type=coalesce(asset_type, assetType, sourcetype)
            | table
                _time
                asset_type
                easm_id
                domain
                host
                ip_address
            | sort - _time
          </query>
        </search>

        <option name="count">25</option>
        <option name="wrap">true</option>
        <option name="rowNumbers">true</option>

        <!-- Default click: Asset → Asset Detail -->
        <drilldown>
          <link>
            <target>defender_easm_asset_detail</target>
            <arg name="form.easm_id">$row.easm_id$</arg>
          </link>
        </drilldown>

        <!-- Right-click: Asset → Exposure Insights -->
        <drilldown type="row">
          <condition>
            <action>
              <link>
                <target>defender_easm_attack_surface_summary</target>
                <arg name="form.easm_id">$row.easm_id$</arg>
              </link>
            </action>
          </condition>
        </drilldown>

        <!-- Right-click: Domain → Related DNS / IPs -->
        <drilldown type="row">
          <condition match="$row.domain$!=&quot;&quot;">
            <action>
              <link>
                <target>defender_easm_inventory</target>
                <arg name="form.domain">$row.domain$</arg>
              </link>
            </action>
          </condition>
        </drilldown>

      </table>
    </panel>
  </row>

</dashboard>
