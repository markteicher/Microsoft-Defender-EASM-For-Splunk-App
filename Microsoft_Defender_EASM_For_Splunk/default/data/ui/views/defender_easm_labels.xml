<!--
  File: defender_easm_labels.xml
  Microsoft Defender EASM for Splunk App

  Dashboard: Labels
  Source: Defender EASM Control Plane API (Labels)
  Endpoint:
    GET /providers/Microsoft.Easm/workspaces/{workspace}/labels
-->

<dashboard version="1.1">
  <label>üè∑Ô∏è Labels</label>

  <description>
    Inventory of labels defined in Microsoft Defender External Attack Surface Management.
    Data sourced from the Defender EASM Control Plane Labels API.
  </description>

  <!-- ========================= -->
  <!-- BASE SEARCH -->
  <!-- ========================= -->
  <search id="base_labels">
    <query>
      `easm_index`
      sourcetype=defender:easm:label
      | eval
          label_display_name=properties.displayName,
          label_color=properties.color,
          provisioning_state=properties.provisioningState,
          created_by_type=systemData.createdByType,
          created_at=systemData.createdAt,
          last_modified_at=systemData.lastModifiedAt,
          workspace_name=replace(id,".*/workspaces/([^/]+)/labels.*","\1")
    </query>
    <earliest>-90d@d</earliest>
    <latest>now</latest>
  </search>

  <!-- ========================= -->
  <!-- ROW 1: KPI PANELS -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>Total Labels</title>
      <single>
        <search base="base_labels">
          <query>
            | stats count
          </query>
        </search>
        <option name="unit">labels</option>
      </single>
    </panel>

    <panel>
      <title>Provisioning State</title>
      <chart>
        <search base="base_labels">
          <query>
            | stats count by provisioning_state
          </query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>

    <panel>
      <title>Created By Type</title>
      <chart>
        <search base="base_labels">
          <query>
            | stats count by created_by_type
          </query>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.legend.placement">none</option>
      </chart>
    </panel>

  </row>

  <!-- ========================= -->
  <!-- ROW 2: LABEL COLORS -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>Labels by Color</title>
      <chart>
        <search base="base_labels">
          <query>
            | stats count by label_color
            | sort - count
          </query>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.axisTitleX.text">Label Color</option>
        <option name="charting.axisTitleY.text">Count</option>
      </chart>
    </panel>

  </row>

  <!-- ========================= -->
  <!-- ROW 3: LABEL INVENTORY -->
  <!-- ========================= -->
  <row>

    <panel>
      <title>Label Inventory</title>
      <table>
        <search base="base_labels">
          <query>
            | table
                label_display_name
                label_color
                provisioning_state
                created_by_type
                created_at
                last_modified_at
                workspace_name
            | sort label_display_name
          </query>
        </search>
        <option name="count">20</option>
        <option name="wrap">true</option>
      </table>
    </panel>

  </row>

</dashboard>
