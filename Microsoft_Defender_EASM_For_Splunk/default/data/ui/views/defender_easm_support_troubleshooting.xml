<dashboard>
  <label>Support & Troubleshooting</label>

  <row>
    <panel>
      <title>Connector Health</title>
      <table>
        <search>
          <query>
            index=defender_easm sourcetype=easm:connections
            | table connector_type status last_success last_error
          </query>
        </search>
      </table>
    </panel>
  </row>

  <row>
    <panel>
      <title>Task Execution Failures</title>
      <chart>
        <search>
          <query>
            index=defender_easm sourcetype=easm:tasks status=failed
            | timechart count
          </query>
        </search>
        <option name="charting.chart">line</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>Recent Errors</title>
      <table>
        <search>
          <query>
            index=defender_easm level=error
            | table _time component message
          </query>
        </search>
      </table>
    </panel>
  </row>
</dashboard>
