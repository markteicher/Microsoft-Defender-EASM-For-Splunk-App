<dashboard version="1.1">
  <label>Security Posture</label>

  <!-- ========================= -->
  <!-- Overall Security Posture -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Total Assets Evaluated</title>
      <single>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:assets
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Assets With Findings</title>
      <single>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:findings
            | stats dc(assetId)
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Critical Posture Issues</title>
      <single>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:findings severity=critical
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>High Posture Issues</title>
      <single>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:findings severity=high
            | stats count
          </query>
        </search>
      </single>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- Findings by Severity -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Findings by Severity</title>
      <chart>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:findings
            | stats count by severity
          </query>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- Posture by Asset Type -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Posture Issues by Asset Type</title>
      <chart>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:findings
            | stats count by assetType
          </query>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- Security Posture Trend -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Security Posture Trend</title>
      <chart>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:findings
            | timechart span=1d count by severity
          </query>
        </search>
        <option name="charting.chart">line</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- Top Posture Weaknesses -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Top Security Weaknesses</title>
      <table>
        <search>
          <query>
            index=security_defender_easm sourcetype=defender:easm:findings
            | stats count by findingType
            | sort - count
            | head 10
          </query>
        </search>
      </table>
    </panel>
  </row>

</dashboard>
